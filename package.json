{
    "name": "ts-add-js-extension",
    "description": "Add .js or .mjs extension to each relative ESM import and export statement in JavaScript file",
    "version": "1.3.3",
    "license": "MIT",
    "main": "build/cjs/index.js",
    "module": "build/mjs/index.js",
    "types": "build/cjs/index.d.ts",
    "react-native": "build/mjs/index.js",
    "exports": {
        "./package.json": "./package.json",
        ".": {
            "require": "./build/cjs/index.js",
            "import": "./build/mjs/index.js",
            "default": "./build/mjs/index.js"
        }
    },
    "bin": {
        "ts-add-js-extension": "bin/ts-add-js-extension.js"
    },
    "publishConfig": {
        "access": "public"
    },
    "files": [
        "build"
    ],
    "scripts": {
        "installation": "pnpm i --frozen-lockfile",
        "lint": "eslint src/ test/ -f='stylish' --color",
        "format": "prettier --ignore-path .gitignore --write src/ test/",
        "format-check": "prettier --ignore-path .gitignore --check src/ test/",
        "build-cjs": "tsc -p tsconfig.cjs.json",
        "build-mjs": "tsc -p tsconfig.mjs.json && ./bin/ts-add-js-extension.js add --dir=build/mjs",
        "build": "rm -rf build && pnpm build-cjs && pnpm build-mjs && cp node_modules/node-package-helper/test/dummy/cjs/package.json build/cjs/package.json && cp node_modules/node-package-helper/test/dummy/mjs/package.json build/mjs/package.json",
        "test-setup": "cd test && rm -rf output && mkdir output && cp -r sample/** output",
        "test": "vitest"
    },
    "bugs": "https://github.com/GervinFung/ts-add-js-extension/issues",
    "repository": {
        "type": "git",
        "url": "https://github.com/GervinFung/ts-add-js-extension"
    },
    "devDependencies": {
        "@poolofdeath20/eslint-config": "^0.0.1",
        "@types/node": "^20.1.1",
        "@types/yargs": "^17.0.13",
        "@typescript-eslint/eslint-plugin": "^5.59.5",
        "@typescript-eslint/parser": "^5.59.5",
        "eslint": "^8.25.0",
        "graphql": "^14.7.0",
        "node-package-helper": "github:GervinFung/node-package-helper",
        "prettier": "^2.7.1",
        "typescript": "^5.0.4",
        "vitest": "^0.24.3"
    },
    "dependencies": {
        "@typescript-eslint/typescript-estree": "^5.59.5",
        "yargs": "^17.6.0"
    },
    "keywords": [
        "esm",
        "tsc",
        "typescript",
        "javascript",
        "js extension",
        "esnext"
    ]
}
