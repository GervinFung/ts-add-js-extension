{
    "name": "ts-add-js-extension",
    "description": "Add .js or .mjs extension to each relative ESM import and export statement in JavaScript file",
    "version": "1.3.2",
    "license": "MIT",
    "main": "build/cjs/index.js",
    "module": "build/mjs/index.js",
    "types": "build/dts/index.d.ts",
    "react-native": "build/mjs/index.js",
    "exports": {
        "./package.json": "./package.json",
        ".": {
            "require": "./build/cjs/index.js",
            "import": "./build/mjs/index.js",
            "default": "./build/mjs/index.js",
            "types": "./build/dts/index.d.ts"
        }
    },
    "bin": {
        "ts-add-js-extension": "bin/ts-add-js-extension.js"
    },
    "publishConfig": {
        "access": "public"
    },
    "files": [
        "build"
    ],
    "scripts": {
        "installation": "pnpm i --frozen-lockfile",
        "lint": "eslint src/ test/ -f='stylish' --color",
        "format": "prettier --ignore-path .gitignore --write src/ test/",
        "format-check": "prettier --ignore-path .gitignore --check src/ test/",
        "build-cjs": "tsc -p tsconfig.cjs.json",
        "build-dts": "tsc -p tsconfig.dts.json",
        "build-mjs": "tsc -p tsconfig.mjs.json && ./bin/ts-add-js-extension.js add --dir=build/mjs",
        "build": "rm -rf build && pnpm build-dts && pnpm build-cjs && pnpm build-mjs && node-package-helper",
        "test-setup": "cd test && rm -rf output && mkdir output && cp -r sample/** output && cd ../ && node script/test.js",
        "test": "pnpm test-setup && vitest"
    },
    "bugs": "https://github.com/Packer-Man/ts-add-js-extension/issues",
    "repository": {
        "type": "git",
        "url": "https://github.com/Packer-Man/ts-add-js-extension"
    },
    "devDependencies": {
        "@types/node": "^16.11.10",
        "@types/yargs": "^17.0.13",
        "@typescript-eslint/eslint-plugin": "^5.40.0",
        "@typescript-eslint/parser": "^5.40.0",
        "cases-of-test": "^0.0.0",
        "eslint": "^8.25.0",
        "node-package-helper": "github:Packer-Man/node-package-helper",
        "prettier": "^2.7.1",
        "typescript": "^4.8.4",
        "vitest": "^0.24.3"
    },
    "dependencies": {
        "@typescript-eslint/typescript-estree": "^5.40.0",
        "yargs": "^17.6.0"
    },
    "keywords": [
        "esm",
        "tsc",
        "typescript",
        "javascript",
        "js extension",
        "esnext"
    ]
}
